{
  "name": "nest-nerdery-challenge",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "npx prisma generate && npm run build",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npx dotenv -e .env.test -- jest",
    "test:auth": "npx dotenv -e .env.test -- jest auth/auth.service.spec.ts ",
    "test:user": "npx dotenv -e .env.test -- jest users/users.service.spec.ts",
    "test:author": "npx dotenv -e .env.test -- jest author/author.service.spec.ts --detectOpenHandles",
    "test:category": "npx dotenv -e .env.test -- jest category/category.service.spec.ts --detectOpenHandles",
    "test:book": "npx dotenv -e .env.test -- jest books/books.service.spec.ts  --detectOpenHandles",
    "test:item": "npx dotenv -e .env.test -- jest item/item.service.spec.ts --detectOpenHandles",
    "test:searchBook": "npx dotenv -e .env.test -- jest search-book/search-book.service.spec.ts --detectOpenHandles",
    "test:shopping": "npx dotenv -e .env.test -- jest shopping-card/shopping-card.service.spec.ts --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:seed": "npx prisma db seed --preview-feature",
    "prisma:seed:test": "npx dotenv -e .env.test npx ts-node ./prisma/seed-test.ts",
    "prisma:migrate:run": "npx prisma migrate deploy --preview-feature",
    "migrate:dbtest": "npx dotenv -e .env.test -- npx prisma migrate dev --name experimental",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\""
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.1",
    "@prisma/client": "^2.25.0",
    "@sendgrid/mail": "^7.4.5",
    "@types/aws-sdk": "^2.7.0",
    "@types/node": "^15.12.5",
    "@types/uuid": "^8.3.0",
    "aws-sdk": "^2.935.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/multer": "^1.4.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prisma": "^2.25.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
